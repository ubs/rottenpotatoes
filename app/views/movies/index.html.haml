-#  This file is app/views/movies/index.html.haml
%h1= link_to 'All Movies', movies_path

%br

= form_tag movies_path, :method => :get, :id => 'ratings_form' do
  Include: 
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", 1, get_check_box_state(@ratings_selected, rating)
  = submit_tag 'Refresh', :id => 'ratings_submit'

%table#movies
  %thead
    %tr
      %th{:class => "#{hilite 'title', @sort_column}" }
        = link_to 'Movie Title', movies_path(:sort_by => 'title'), :id => "title_header"

      %th Rating

      %th{:class => "#{hilite 'release_date', @sort_column}" }
        = link_to 'Release Date', movies_path(:sort_by => 'release_date'), :id => "release_date_header" 

      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path


%br

%br

